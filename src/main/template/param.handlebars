<td class='code'>{{name}}</td>
<td>

	{{#if isBody}}
		{{#if isFile}}
			<input type="file" name='{{name}}'/>
			<div class="parameter-content-type" />
		{{else}}
			{{#ifSwaggerUiConfig "showParameterDataTypeColumn"}}
			<textarea class='body-textarea' name='{{name}}'>{{defaultValue}}</textarea>
			{{else}}
			<textarea class='body-textarea' placeholder='{{type}}' name='{{name}}'>{{defaultValue}}</textarea>
			{{/ifSwaggerUiConfig}}
			<br />
			{{#unlessSwaggerUiConfig "showParameterDataTypeColumn"}}
			<a class="paste-model-template" href="#"><img src="images/paste_plain.png" style="margin-right: 4px"/>Paste model template</a>
			<br>
			{{/unlessSwaggerUiConfig}}
			{{#ifSwaggerUiConfig "showParameterContentType"}}
			<div class="parameter-content-type" />
			{{/ifSwaggerUiConfig}}
		{{/if}}
	{{else}}
		{{#ifSwaggerUiConfig "showParameterDataTypeColumn"}}
		<input class='parameter' minlength='0' name='{{name}}' placeholder='' type='text' value='{{defaultValue}}'/>
		{{else}}
		<input class='parameter' minlength='0' name='{{name}}' placeholder='{{type}}' type='text' value='{{defaultValue}}'/>
		{{/ifSwaggerUiConfig}}
	{{/if}}

</td>
<td>{{{description}}}</td>
<td>{{{paramType}}}</td>
{{#ifSwaggerUiConfig "showParameterDataTypeColumn"}}
<td>
	<span class="model-signature"></span>
</td>
{{/ifSwaggerUiConfig}}